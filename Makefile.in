exe = dochttx
h_files = $(wildcard *.h)
c_files = $(wildcard *.c)
o_files = $(c_files:%.c=%.o)

CC = @CC@
CFLAGS = @CFLAGS@ @CURSES_CFLAGS@ @ZVBI_CFLAGS@
CFLAGS += -Wall -Wextra -Wformat
CPPFLAGS = @CPPFLAGS@
LDFLAGS = @LDFLAGS@
LDLIBS = @LIBS@ @CURSES_LIBS@ @ZVBI_LIBS@

.PHONY: all
all: $(exe)

.PHONY: clean
clean:
	rm -f *.o $(exe) Makefile.dep

.PHONY: distclean
distclean: clean
	rm -f config.log config.status Makefile config.h

$(exe): $(o_files)
	$(CC) $(CFLAGS) $(LDFLAGS) $(^) $(LDLIBS) -o $(@)

Makefile.dep: $(c_files) $(h_files)
	$(CC) $(CFLAGS) $(CPPFLAGS) -MM $(c_files) > $(@)

-include Makefile.dep

