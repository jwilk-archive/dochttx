EXEFILE = dochttx
HFILES = $(wildcard *.h)
CFILES = $(wildcard *.c)
OFILES = $(CFILES:%.c=%.o)

CC = @CC@
CFLAGS = @CFLAGS@ @ZVBI_CFLAGS@
CFLAGS += -W -Wall
LDFLAGS = @LDFLAGS@
LDLIBS = @LIBS@ @CURSES_LIB@ @ZVBI_LIBS@
CPPFLAGS = @CPPFLAGS@

.PHONY: all
all: $(EXEFILE)

.PHONY: clean
clean:
	$(RM) *.o $(EXEFILE) core core.* *~ Makefile.dep

.PHONY: distclean
distclean: clean
	rm -f config.log config.status config.h

$(OFILES): %.o: %.c
	$(CC) $(CFLAGS) -c $(<) -o $(@)

$(EXEFILE): $(OFILES)
	$(CC) $(CFLAGS) $(LDFLAGS) $(^) $(LDLIBS) -o $(@)

Makefile.dep: $(CFILES) $(HFILES)
	$(CC) $(CFLAGS) -MM $(CFILES) > $(@)

-include Makefile.dep

